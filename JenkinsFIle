pipeline {
    agent any
    tools {
       terraform 'Terraform'
    }
    stages {
        stage('Git checkout') {
           steps{
                git branch: 'main', url: 'https://github.com/blavelle-portfolio/Terraform-wp'
            }
        }
        stage('terraform init') {
            steps {
                withAWS(credentials: 'aws_creds') {
                    sh 'terraform init'
                }
            }
        }
    }
}        
        stage('terraform plan') {
            steps {
                withAWS(credentials: 'aws_creds') {
                    sh 'terraform plan'
                }
            }
        }
        stage('terraform apply') {
            steps {
                withAWS(credentials: 'aws_creds') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
        